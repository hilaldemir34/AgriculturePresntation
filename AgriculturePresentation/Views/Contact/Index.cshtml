@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Mesajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-danger">Mesaj bulunamadı</td>

                            </tr>
                        }
                        else
                        {

                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image" />
                                    </td>
                                  
                                    <td>@x.ContactID</td>
                                    <td>@x.Name</td>
                                    <td>@x.Mail</td>
                              
                                    <td><a href="/Message/MessageDetails/@x.ContactID" class="btn btn-outline-success">Mesaj Gör</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <br />
               
            </div>
        </div>
    </div>
</div>







