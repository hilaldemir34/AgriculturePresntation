@model EntityLayer.Entities.Team
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Takım Arkadaşı Kaydı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Adı-Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" asp-for="PersonName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>

                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Görev" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label>
                    <span asp-validation-for="imgURL" class="text-danger"></span>

                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Görsel yolu" asp-for="imgURL">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="facebook" asp-for="FacebookURL">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Twitter</label>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="twitter" asp-for="TwitterURL">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram</label>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="instagram" asp-for="İnstagramURL">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Web Sitesi</label>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Varsa web site linkini ekleyin" asp-for="WebSiteURL">
                </div>
                
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>


