@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Id</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Aktif Yap</th>
                            <th>Pasif Yap</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center text-danger">Duyuru bulunamadı</td>

                            </tr>
                        }
                        else
                        {

                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image" />
                                    </td>
                                    <td>@x.AnnouncementID</td>
                                    <td>@x.Title</td>
                                    <td>@x.Date</td>
                                    <td><a href="/Announcement/DeleteAnnouncement/@x.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Announcement/EditAnnouncement/@x.AnnouncementID" class="btn btn-outline-success">Düzenle</a></td>
                                    <td><a href="/Announcement/ChangeStatusToTrue/@x.AnnouncementID" class="btn btn-outline-warning">Aktif Yap</a></td>
                                    <td><a href="/Announcement/ChangeStatusToFalse/@x.AnnouncementID" class="btn btn-outline-secondary">Pasif Yap</a></td>
                                    
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-primary">Yeni Duyuru Ekle</a>
            </div>
        </div>
    </div>
</div>


