@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AnnouncementID)
                <div class="form-group">
                    <label>Başlık</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control"  placeholder="Başlık" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <span asp-validation-for="Date" class="text-danger"></span>
                    <input type="date" class="form-control" placeholder="Tarih giriniz" asp-for="Date">
                </div>
                <div class="form-group">
                    <label >Açıklama</label>
                    <span asp-validation-for="Description" class="text-danger"></span>

                    <textarea cols="30" rows="5" asp-for="Description" class="form-control" placeholder="açıklamayı giriniz"></textarea>
                </div>

                <button type="submit" class="btn btn-primary me-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>