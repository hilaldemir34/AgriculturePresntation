@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Açıklama 1</th>
                            <th>Açıklama 2</th>
                            <th>Açıklama 3</th>
                            <th>Açıklama 4</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-danger">Adres bulunamadı</td>

                            </tr>
                        }
                        else
                        {

                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image" />
                                    </td>
                                  
                                    <td>@x.Description1</td>
                                    <td>@x.Description2</td>
                                    <td>@x.Description3</td>
                                    <td>@x.Description4</td>
                              
                                    <td><a href="/Address/EditAddress/@x.AddressID" class="btn btn-outline-success">Düzenle</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <br />
               
            </div>
        </div>
    </div>
</div>





