@using EntityLayer.Entities
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Başlık
                            </th>
                            <th>
                                Sil
                            </th>
                            <th>
                                Düzenle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                 @foreach(var x in Model)
                        {
                            <tr>
                                <td>@x.ServiceID</td>
                                <td>@x.Title</td>
                                <td><a href="/Service/DeleteService/@x.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Service/EditeService/@x.ServiceID" class="btn btn-outline-warning">Düzenle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Service/AddService" class="btn btn-outline-info">Hizmet Ekle</a>
            </div>
        </div>
    </div>
</div>