@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var x in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@x.ImgUrl" alt="image" />
                                </td>
                                <td><a href="/Image/DeleteImage/@x.ImageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Image/EditImage/@x.ImageID" class="btn btn-outline-success">Düzenle</a></td>
                            </tr>
                        }
                       
                        
                    </tbody>
                </table>
                <a href="/Image/AddImage/" class="btn btn-outline-primary">Yeni Görsel Ekle</a>
            </div>
        </div>
    </div>
</div>

